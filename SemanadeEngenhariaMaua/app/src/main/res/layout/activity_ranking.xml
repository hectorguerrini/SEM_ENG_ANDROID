<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="semanaeng.studio.com.semanadeengenhariamaua.sidebar.ranking">
    <include
        android:id="@+id/toolbarPrincipal"
        layout="@layout/toolbar"
        />
    <include
        android:id="@+id/imgbar"
        layout="@layout/imgbar"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"
        android:id="@+id/imageButtonBack"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_back"
        android:layout_alignEnd="@+id/button_back" />

    <Button
        android:layout_width="50dp"
        android:id="@+id/button_back"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp" />

    <Button
        android:text="Adcionar Pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:id="@+id/button_adcionarP"
        android:layout_below="@+id/toolbarPrincipal"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaRanking"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/text_my_pos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_view_posicao"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10sp"
        android:paddingTop="5dp"
        android:text="Posição"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:elevation="5dp"
        android:textStyle="bold|italic"
        android:background="@color/colorRankingB"
        android:layout_below="@+id/button_adcionarP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_view_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Nome"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10sp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:background="@color/colorRankingB"
        android:layout_alignBaseline="@+id/text_view_posicao"
        android:layout_alignBottom="@+id/text_view_posicao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_view_pontos"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Pontos"
        android:elevation="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10sp"
        android:paddingTop="5dp"
        android:textSize="14sp"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        android:layout_alignBaseline="@id/text_view_nome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorRankingB"/>

    <TextView
        android:id="@+id/text_my_pos"

        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="5sp"
        android:paddingBottom="5dp"
        android:paddingLeft="10sp"
        android:paddingTop="5dp"
        android:layout_below="@id/text_view_posicao"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:elevation="5dp"
        android:textStyle="bold|italic"
        android:background="@color/colorRankingB"
        />

    <TextView
        android:id="@+id/text_my_nome"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingBottom="5dp"

        android:paddingTop="5dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:background="@color/colorRankingB"

        android:layout_alignBaseline="@+id/text_my_pos"
        android:layout_alignBottom="@+id/text_my_pos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_my_pontos"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:elevation="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10sp"
        android:paddingTop="5dp"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        android:layout_below="@+id/text_view_nome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5sp"
        android:background="@color/colorRankingB"/>

</RelativeLayout>
