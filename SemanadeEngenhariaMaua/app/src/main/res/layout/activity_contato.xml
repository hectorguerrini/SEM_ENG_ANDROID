<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="semanaeng.studio.com.semanadeengenhariamaua.sidebar.contato">
    <include
        android:id="@+id/toolbarPrincipal"
        layout="@layout/toolbar"
        />
    <include
        android:id="@+id/imgbar"
        layout="@layout/imgbar"
        />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"
        android:id="@+id/imageButtonBack"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_back"
        android:layout_alignEnd="@+id/button_back" />

    <Button
        android:layout_width="40dp"
        android:id="@+id/button_back"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_phone_black_24dp"
        android:layout_marginTop="56dp"
        android:id="@+id/image_contato"
        android:layout_below="@+id/toolbarPrincipal"
        android:layout_alignLeft="@+id/imageButtonBack"
        android:layout_alignStart="@+id/imageButtonBack" />

    <TextView
        android:text="(11) 4239-3169"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_contato"
        android:layout_toRightOf="@+id/image_contato"
        android:layout_toEndOf="@+id/image_contato"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/text_tel"
        android:textSize="18sp" />

    <TextView
        android:text="Endereço: Praça Mauá, 01 Instituto Mauá de Tecnologia - Sala H210 - Mauá, São Caetano do Sul - SP, 09580-900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_contato"
        android:layout_alignLeft="@+id/image_contato"
        android:layout_alignStart="@+id/image_contato"
        android:layout_marginTop="63dp"
        android:id="@+id/textView4"
        android:textSize="16sp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif"/>

</RelativeLayout>
