<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recrutamento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="semanaeng.studio.com.semanadeengenhariamaua.sidebar.recrutamento">
    <include
        android:id="@id/toolbarPrincipal"
        layout="@layout/toolbar"/>
    <include
        android:id="@id/imgbar"
        layout="@layout/imgbar"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp"
        android:id="@+id/imageButtonBack"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_back"
        android:layout_alignEnd="@+id/button_back" />
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/toolbarPrincipal"
        android:layout_centerHorizontal="true"
        android:progress="0"
        />
    <Button
        android:layout_width="40dp"
        android:id="@+id/button_back"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_rec1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/text_recData"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:textColor="@android:color/black"
         />

    <Button
        android:text="Inscrever-se para nossos\nProcesso Seletivo"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginBottom="82dp"
        android:id="@+id/button_rec_site"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_rec1"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/toolbarPrincipal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
